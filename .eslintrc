{
    "parser": "babel-eslint",
    "extends": [
        "react-app",
        "airbnb"
    ],
    "rules": {
        "max-len": [
            "error",
            120,
            2,
            {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "semi": [
            2,
            "never"
        ],
        "no-plusplus": 0,
        "no-sparse-arrays": 0,
        "no-debugger": 1,
        "no-console": 2,
        "no-bitwise": [
            "error",
            {
                "allow": [
                    "~",
                    "^"
                ]
            }
        ],
        "implicit-arrow-linebreak": 0,
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "import/first": [
            "error",
            "disable-absolute-first"
        ],
        "import/extensions": [
            "error",
            "never",
            {
                "packages": "always"
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ],
        "react/no-danger": 0,
        "react/prop-types": 1,
        "react/require-default-props": 0,
        "react/no-find-dom-node": 0,
        "react/no-unused-prop-types": 0,
        "react/forbid-prop-types": 0,
        "react/jsx-one-expression-per-line": "allow",
        "jsx-a11y/anchor-has-content": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/href-no-hash": 0,
        "react/jsx-no-bind": [
            1,
            {
                "ignoreRefs": true,
                "allowArrowFunctions": false,
                "allowBind": false
            }
        ],
        "no-alert": 0,
        "no-prototype-builtins": 0,
        "no-underscore-dangle": 0,
        "comma-dangle": [
            "error",
            "never"
        ]
    },
    "globals": {
        "window": true,
        "document": true,
        "Headers": true,
        "Request": true,
        "FileReader": true,
        "FormData": true,
        "fetch": false
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": {
                    "resolve": {
                        "modules": [
                            "node_modules",
                            "src"
                        ],
                        "extensions": [
                            ".jsx",
                            ".json",
                            ".js"
                        ]
                    }
                }
            }
        }
    }
}
